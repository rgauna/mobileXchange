<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>All Users</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>{{this.firstName}}</td>
              <td>{{this.lastName}}</td>
              <td>{{this.email}}</td>
              <td>
                <form action="/users/{{this.id}}" method="GET">
                  <button class="btn btn-default" type="submit">Update</button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>